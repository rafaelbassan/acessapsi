@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Dynamic Color System */
  --bg-primary: 15, 23, 42;          /* slate-900 */
  --bg-secondary: 30, 58, 138;       /* blue-900 */
  --bg-accent: 67, 56, 202;          /* indigo-900 */
  --bg-tertiary: 88, 28, 135;        /* violet-900 */

  --foreground-rgb: 248, 250, 252;   /* slate-50 */
  --text-secondary: 203, 213, 225;   /* slate-300 */
  --text-muted: 148, 163, 184;       /* slate-400 */

  /* Enhanced Glass Effects */
  --glass-bg: rgba(255, 255, 255, 0.08);
  --glass-bg-hover: rgba(255, 255, 255, 0.12);
  --glass-border: rgba(255, 255, 255, 0.15);
  --glass-border-hover: rgba(255, 255, 255, 0.25);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  --glass-shadow-hover: 0 16px 64px rgba(0, 0, 0, 0.18);

  /* Dynamic Accent Colors */
  --accent-primary: 59, 130, 246;    /* blue-500 */
  --accent-secondary: 99, 102, 241;  /* indigo-500 */
  --accent-tertiary: 168, 85, 247;   /* purple-500 */
  --accent-success: 34, 197, 94;     /* green-500 */
  --accent-warning: 245, 158, 11;    /* amber-500 */
  --accent-error: 239, 68, 68;       /* red-500 */

  /* Gradient Definitions */
  --gradient-primary: linear-gradient(135deg, rgb(var(--bg-primary)) 0%, rgb(var(--bg-secondary)) 50%, rgb(var(--bg-accent)) 100%);
  --gradient-secondary: linear-gradient(135deg, rgb(var(--bg-secondary)) 0%, rgb(var(--bg-accent)) 50%, rgb(var(--bg-tertiary)) 100%);
  --gradient-accent: linear-gradient(135deg, rgb(var(--accent-primary)) 0%, rgb(var(--accent-secondary)) 50%, rgb(var(--accent-tertiary)) 100%);
  --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);

  /* Animation Variables */
  --transition-fast: 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);

  /* Spacing Scale */
  --space-xs: 0.25rem;
  --space-sm: 0.5rem;
  --space-md: 0.75rem;
  --space-lg: 1rem;
  --space-xl: 1.5rem;
  --space-2xl: 2rem;
  --space-3xl: 3rem;
}

/* Light Mode Variables */
[data-theme="light"] {
  --bg-primary: 248, 250, 252;       /* slate-50 */
  --bg-secondary: 241, 245, 249;     /* slate-100 */
  --bg-accent: 226, 232, 240;        /* slate-200 */
  --bg-tertiary: 203, 213, 225;      /* slate-300 */

  --foreground-rgb: 15, 23, 42;      /* slate-900 */
  --text-secondary: 51, 65, 85;      /* slate-700 */
  --text-muted: 100, 116, 139;       /* slate-500 */

  --glass-bg: rgba(255, 255, 255, 0.8);
  --glass-bg-hover: rgba(255, 255, 255, 0.9);
  --glass-border: rgba(0, 0, 0, 0.1);
  --glass-border-hover: rgba(0, 0, 0, 0.15);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  --glass-shadow-hover: 0 16px 64px rgba(0, 0, 0, 0.12);
}

@media (prefers-color-scheme: dark) {
  :root {
    --foreground-rgb: 248, 250, 252;
    --bg-primary: 15, 23, 42;
    --bg-secondary: 30, 58, 138;
    --bg-accent: 67, 56, 202;
    --bg-tertiary: 88, 28, 135;
  }
}

html {
  scroll-behavior: smooth;
  scroll-padding-top: 80px;
}

body {
  color: rgb(var(--foreground-rgb));
  background: var(--gradient-primary);
  font-family: 'Inter', '-apple-system', 'BlinkMacSystemFont', 'system-ui', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-feature-settings: 'rlig' 1, 'calt' 1;
  line-height: 1.6;
  transition: background var(--transition-slow), color var(--transition-normal);
}

/* Enhanced Typography */
h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.3;
  color: rgb(var(--foreground-rgb));
  letter-spacing: -0.025em;
  transition: color var(--transition-normal);
}

p {
  line-height: 1.7;
  color: rgb(var(--text-secondary));
  transition: color var(--transition-normal);
}

/* Smooth Transitions for All Elements */
* {
  transition: color var(--transition-normal),
              background-color var(--transition-normal),
              border-color var(--transition-normal),
              transform var(--transition-normal),
              opacity var(--transition-normal),
              box-shadow var(--transition-normal),
              filter var(--transition-normal);
}

/* Focus States */
button:focus-visible,
a:focus-visible,
input:focus-visible,
textarea:focus-visible,
select:focus-visible {
  outline: 2px solid rgb(var(--accent-primary));
  outline-offset: 2px;
  border-radius: 0.375rem;
}

/* Enhanced Glassmorphism Effects */
.glass {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  box-shadow: var(--glass-shadow);
  transition: all var(--transition-normal);
}

.glass:hover {
  background: var(--glass-bg-hover);
  border-color: var(--glass-border-hover);
  box-shadow: var(--glass-shadow-hover);
  transform: translateY(-2px);
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: rgb(var(--bg-primary));
}

::-webkit-scrollbar-thumb {
  background: rgb(var(--accent-primary));
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgb(var(--accent-secondary));
}

/* Selection */
::selection {
  background: rgba(var(--accent-primary), 0.2);
  color: rgb(var(--foreground-rgb));
}

/* Custom Animations */
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 0 20px rgba(var(--accent-primary), 0.3); }
  50% { box-shadow: 0 0 30px rgba(var(--accent-primary), 0.6); }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes pulse-glow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes bounce-in {
  0% { transform: scale(0.3); opacity: 0; }
  50% { transform: scale(1.05); }
  70% { transform: scale(0.9); }
  100% { transform: scale(1); opacity: 1; }
}

@keyframes slide-in-left {
  0% { transform: translateX(-100px); opacity: 0; }
  100% { transform: translateX(0); opacity: 1; }
}

@keyframes slide-in-right {
  0% { transform: translateX(100px); opacity: 0; }
  100% { transform: translateX(0); opacity: 1; }
}

@keyframes fade-in-up {
  0% { transform: translateY(30px); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

/* Utility Classes */
.shimmer {
  position: relative;
  overflow: hidden;
}

.shimmer::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shimmer 2s infinite;
}

.glow {
  animation: glow 2s ease-in-out infinite;
}

.float {
  animation: float 3s ease-in-out infinite;
}

.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

.bounce-in {
  animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.slide-in-left {
  animation: slide-in-left 0.6s ease-out;
}

.slide-in-right {
  animation: slide-in-right 0.6s ease-out;
}

.fade-in-up {
  animation: fade-in-up 0.6s ease-out;
}

/* Glass Effects */
.glass-card {
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  box-shadow: var(--glass-shadow);
  transition: all var(--transition-normal);
}

.glass-card:hover {
  background: var(--glass-bg-hover);
  border-color: var(--glass-border-hover);
  box-shadow: var(--glass-shadow-hover);
  transform: translateY(-2px);
}

/* Button Effects */
.glass-button {
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  transition: all var(--transition-normal);
}

.glass-button-interactive:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
}

.glass-button-loading {
  pointer-events: none;
}

/* Card Hover Effects */
.hover-lift {
  transition: all var(--transition-normal);
}

.hover-lift:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 80px rgba(0, 0, 0, 0.3);
}

/* Text Gradient Effects */
.text-gradient {
  background: linear-gradient(135deg, rgb(var(--accent-primary)), rgb(var(--accent-secondary)), rgb(var(--accent-tertiary)));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Responsive Utilities */
@media (max-width: 768px) {
  .mobile-scale {
    transform: scale(0.95);
  }

  .mobile-spacing {
    padding: 1rem;
  }
}

/* Performance Optimizations */
.will-change-transform {
  will-change: transform;
}

.will-change-opacity {
  will-change: opacity;
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Focus States */
.focus-ring:focus-visible {
  outline: 2px solid rgb(var(--accent-primary));
  outline-offset: 2px;
  border-radius: 0.375rem;
}

/* Consistent Background Classes */
.bg-hero {
  background: var(--bg-gradient-primary);
}

.bg-section {
  background: var(--bg-gradient-section);
}

.bg-nav {
  background: rgba(var(--bg-primary), 0.95);
}

.bg-nav-scrolled {
  background: rgba(var(--bg-primary), 0.98);
}

.bg-glass-light {
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
}

.bg-glass-hover:hover {
  background: var(--glass-hover);
}

.glass-light {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.25);
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
}

.glass-heavy {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow: 
    0 12px 40px 0 rgba(0, 0, 0, 0.25),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.glass-dark {
  background: rgba(15, 23, 42, 0.85);
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.glass-gradient {
  background: linear-gradient(
    135deg, 
    rgba(255, 255, 255, 0.15) 0%, 
    rgba(255, 255, 255, 0.05) 100%
  );
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
}

.glass-colored {
  background: linear-gradient(
    135deg, 
    rgba(59, 130, 246, 0.1) 0%, 
    rgba(99, 102, 241, 0.05) 100%
  );
  backdrop-filter: blur(25px);
  -webkit-backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px 0 rgba(59, 130, 246, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

/* Enhanced Button Designs */
.btn-glass {
  @apply glass text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 ease-out transform hover:scale-[1.02] active:scale-[0.98];
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.12),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
}

.btn-glass:hover {
  background: rgba(255, 255, 255, 0.18);
  box-shadow: 
    0 12px 40px 0 rgba(0, 0, 0, 0.18),
    inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

.btn-glass-primary {
  background: linear-gradient(
    135deg, 
    rgba(59, 130, 246, 0.8) 0%, 
    rgba(99, 102, 241, 0.9) 100%
  );
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  @apply text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 ease-out transform hover:scale-[1.02] active:scale-[0.98];
  box-shadow: 
    0 8px 32px 0 rgba(59, 130, 246, 0.25),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
}

.btn-glass-primary:hover {
  background: linear-gradient(
    135deg, 
    rgba(59, 130, 246, 0.9) 0%, 
    rgba(99, 102, 241, 1) 100%
  );
  box-shadow: 
    0 12px 40px 0 rgba(59, 130, 246, 0.35),
    inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

/* Refined Card Designs */
.card-glass {
  @apply glass-light rounded-2xl p-8 transition-all duration-500 ease-out hover:shadow-2xl hover:-translate-y-1;
}

.card-glass:hover {
  background: rgba(255, 255, 255, 0.18);
  box-shadow: 
    0 20px 60px 0 rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.6);
}

.card-glass-heavy {
  @apply glass-heavy rounded-2xl p-8 transition-all duration-500 ease-out hover:shadow-2xl hover:-translate-y-1;
}

.card-floating {
  @apply card-glass;
  animation: float 8s ease-in-out infinite;
}

/* Morphing Backgrounds */
.bg-morphic {
  background: 
    radial-gradient(ellipse at top, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
    radial-gradient(ellipse at bottom, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
    linear-gradient(135deg, rgba(15, 23, 42, 1) 0%, rgba(30, 41, 59, 1) 100%);
  animation: morphBackground 20s ease-in-out infinite;
}

.bg-morphic-light {
  background: 
    radial-gradient(ellipse at top left, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
    radial-gradient(ellipse at bottom right, rgba(168, 85, 247, 0.05) 0%, transparent 50%),
    linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%);
}

.floating-orb {
  animation: floatOrb 12s ease-in-out infinite;
  opacity: 0.4;
}

.floating-orb-1 { animation-delay: 0s; }
.floating-orb-2 { animation-delay: -4s; }
.floating-orb-3 { animation-delay: -8s; }

/* Interactive Glass Effects */
.hover-glass {
  transition: all 0.3s ease;
}

.hover-glass:hover {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  transform: translateY(-2px);
  box-shadow: 
    0 20px 40px 0 rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

/* Navigation Glass */
.nav-glass {
  background: rgba(15, 23, 42, 0.9);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 24px 0 rgba(0, 0, 0, 0.1);
}

/* Text Glass Effect */
.text-glass {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-glass-dark {
  background: linear-gradient(135deg, rgba(203, 213, 225, 0.9), rgba(148, 163, 184, 0.8));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Animations */
@keyframes morphBackground {
  0%, 100% { 
    background-position: 0% 50%; 
  }
  50% { 
    background-position: 100% 50%; 
  }
}

@keyframes floatOrb {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.4;
  }
  25% {
    transform: translateY(-20px) rotate(90deg);
    opacity: 0.6;
  }
  50% {
    transform: translateY(0px) rotate(180deg);
    opacity: 0.3;
  }
  75% {
    transform: translateY(-10px) rotate(270deg);
    opacity: 0.5;
  }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

/* Utility Classes */
.btn-primary {
  @apply bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl;
}

.btn-secondary {
  @apply bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl;
}

.btn-ghost {
  @apply bg-transparent hover:bg-white/10 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 border border-white/20 hover:border-white/40;
}

.btn-outline {
  @apply bg-transparent border-2 border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300;
}

.card {
  @apply bg-white/5 backdrop-blur-lg border border-white/10 rounded-2xl p-6 shadow-lg;
}

.card-hover {
  @apply card hover:bg-white/10 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300;
}

/* Text Gradients */
.gradient-text {
  @apply bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-transparent;
}

.gradient-text-accent {
  @apply bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent;
}

/* Animation Classes */
.animate-in {
  animation: fadeInUp 0.6s ease-out;
}

.animate-fade-in {
  animation: fadeIn 0.4s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.4s ease-out;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: rgba(15, 23, 42, 0.5);
}

::-webkit-scrollbar-thumb {
  background: rgba(59, 130, 246, 0.5);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(59, 130, 246, 0.7);
}

/* Selection */
::selection {
  background-color: rgba(59, 130, 246, 0.3);
  color: rgb(248, 250, 252);
}

/* Focus Ring Enhancement */
.focus-ring {
  @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-slate-900;
}

/* Typography Scale */
.text-display-large {
  @apply text-5xl md:text-6xl lg:text-7xl font-bold leading-tight tracking-tight;
}

.text-display-medium {
  @apply text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight;
}

.text-display-small {
  @apply text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight;
}

.text-headline-large {
  @apply text-2xl md:text-3xl font-semibold leading-tight;
}

.text-headline-medium {
  @apply text-xl md:text-2xl font-semibold leading-tight;
}

.text-headline-small {
  @apply text-lg md:text-xl font-semibold leading-tight;
}

.text-body-large {
  @apply text-lg leading-relaxed;
}

.text-body-medium {
  @apply text-base leading-relaxed;
}

.text-body-small {
  @apply text-sm leading-relaxed;
}

/* Interaction Effects */
.floating {
  animation: float 6s ease-in-out infinite;
}

.hover-lift {
  @apply transition-transform duration-300 hover:-translate-y-2;
}

.hover-glow {
  @apply transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/25;
}

/* Loading Indicators */
.scroll-indicator {
  position: relative;
}

.scroll-indicator::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
}

/* Background Patterns */
.bg-dot-pattern {
  background-image: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  background-size: 20px 20px;
}

.bg-grid-pattern {
  background-image: 
    linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
  background-size: 20px 20px;
}

/* Advanced Glass Card */
.glass-card {
  @apply relative overflow-hidden rounded-2xl;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.glass-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
}

/* Glass Shimmer Effect */
.glass-shimmer {
  position: relative;
  overflow: hidden;
}

.glass-shimmer::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transform: rotate(45deg);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

/* Interactive Glass Components */
.glass-interactive {
  @apply transition-all duration-300 ease-out;
}

.glass-interactive:hover {
  transform: translateY(-2px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.glass-interactive:active {
  transform: translateY(0px);
}

.glass-hover-effect {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.glass-interactive:hover .glass-hover-effect {
  opacity: 1;
}

/* Glass Button Variants */
.glass-button {
  @apply relative inline-flex items-center justify-center px-6 py-3 rounded-xl font-semibold transition-all duration-300 overflow-hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.glass-button-primary {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.8), rgba(99, 102, 241, 0.8));
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8px 32px rgba(59, 130, 246, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.glass-button-primary::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.2) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.glass-button-secondary {
  background: rgba(255, 255, 255, 0.08);
  color: rgb(203, 213, 225);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.glass-button-secondary::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.glass-button-ghost {
  background: transparent;
  color: rgb(203, 213, 225);
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  box-shadow: none;
}

.glass-button-ghost::after {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.05);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

/* Button Hover States */
.glass-button-interactive:hover.glass-button-primary {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(99, 102, 241, 0.9));
  box-shadow: 
    0 12px 40px rgba(59, 130, 246, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
  transform: translateY(-2px);
}

.glass-button-interactive:hover.glass-button-secondary {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  box-shadow: 
    0 12px 40px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.4);
  transform: translateY(-2px);
}

.glass-button-interactive:hover.glass-button-ghost {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  transform: translateY(-2px);
}

.glass-button-interactive:active {
  transform: translateY(0px);
}

/* Button Shimmer Effect */
.glass-button-shimmer {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transform: translateX(-100%) translateY(-100%) rotate(45deg);
  transition: transform 0.6s ease;
}

.glass-button-interactive:hover .glass-button-shimmer {
  transform: translateX(100%) translateY(100%) rotate(45deg);
}

/* Button Hover Overlay */
.glass-button-hover {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 50%,
    rgba(255, 255, 255, 0.1) 100%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  border-radius: inherit;
}

.glass-button-interactive:hover .glass-button-hover {
  opacity: 1;
}

/* Button Ripple Effect */
.glass-ripple {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0);
  animation: ripple 0.6s linear;
  pointer-events: none;
}

@keyframes ripple {
  to {
    transform: scale(4);
    opacity: 0;
  }
}

/* Button Content */
.glass-button .glass-button-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: transform 0.2s ease;
}

/* Disabled State */
.glass-button-disabled {
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}

.glass-button-disabled::after {
  opacity: 0;
}

.glass-button-disabled .glass-button-shimmer {
  display: none;
}

/* Floating Animation */
@keyframes floating {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

.floating-orb {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(45deg, rgba(59, 130, 246, 0.1), rgba(99, 102, 241, 0.1));
  backdrop-filter: blur(40px);
  animation: floating 8s ease-in-out infinite;
  pointer-events: none;
}

.floating-orb-1 {
  animation-delay: 0s;
}

.floating-orb-2 {
  animation-delay: 2.7s;
}

.floating-orb-3 {
  animation-delay: 5.4s;
}

/* Enhanced Background */
.bg-morphic-light {
  background: 
    radial-gradient(ellipse 800px 600px at 50% 0%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
    radial-gradient(ellipse 600px 400px at 100% 100%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
    linear-gradient(135deg, rgba(15, 23, 42, 1) 0%, rgba(30, 41, 59, 1) 50%, rgba(15, 23, 42, 1) 100%);
}

/* Glass Variants */
.glass-light {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.25);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
}

.glass-heavy {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(30px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
}

.glass-gradient {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.glass-colored {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(99, 102, 241, 0.05));
  backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(59, 130, 246, 0.1);
}

/* Hover Glass Enhancement */
.hover-glass:hover {
  background: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(30px);
  transform: translateY(-2px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
}

/* Slow Float Animation */
@keyframes float-slow {
  0%, 100% {
    transform: translateY(0px);
  }
  25% {
    transform: translateY(-10px);
  }
  50% {
    transform: translateY(0px);
  }
  75% {
    transform: translateY(-5px);
  }
}

.animate-float-slow {
  animation: float-slow 12s ease-in-out infinite;
} 